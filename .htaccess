RewriteEngine On

# Serve static assets directly (JS, CSS, images)
RewriteCond %{REQUEST_URI} ^/(assets|public/assets)/
RewriteRule ^ - [L]

# Do not rewrite real files or directories
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Admin SPA
RewriteRule ^admin(?:/.*)?$ public/admin.php [L,QSA]

# Main SPA
RewriteRule ^ public/index.php [L,QSA]
